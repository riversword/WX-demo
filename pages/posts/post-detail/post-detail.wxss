.container{
  display: flex;
  flex-direction: column;
}
.head-image{
  width: 100%;
}
.author-date{
  flex-direction: row;
  /* justify-content: center; 无效 */
  margin-left: 30rpx; 
  margin-top: 20rpx;
}

.avatar{
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}
 
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
} 
.title{
  margin-left: 40rpx;
  fontsize: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool{
  margin-top: 20rpx;
}

.circlr-img{
  /* float: right; */
  margin-right:40rpx;
  vertical-align: middle;
}

.circle-img image{
  float: right;
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.horizon{
  
  width: 660rpx;
  height: 1px;
  margin: 0 auto;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  z-index: -1;
}

.detail{
  clear: both;
  color: #666;
  /* margin: 20rpx 30rpx ; */
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.audio{
  width: 102rpx;
  height:110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 200rpx;
  opacity: 0.6;
}